<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="petnicameteorgroup.meteorobservationnotebook">

    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/meteor_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/meteor_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ObservationActivity" />
        <activity android:name=".activities.NotesViewActivity" />
        <activity android:name=".activities.OtherActivity" />
        <activity android:name=".activities.ObservationResultsActivity" />
        <activity android:name=".activities.InstructionsActivity" />
        <activity android:name=".activities.ObservationTestActivity" />
    </application>

</manifest>