<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="petnicameteorgroup.visualobservationnotebook.MenuActivity">

    <ImageView
        android:id="@+id/gif"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        tools:ignore="ContentDescription">
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:text="@string/visual_observation_notebook"
        android:textSize="28sp"
        android:textColor="@color/title_color"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginBottom="204dp">

        <Button
            android:id="@+id/begin_observation_button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="@string/begin_observation"
            android:textColor="@color/menu_button_text_color"
            android:onClick="beginObservation"
            android:background="@drawable/menu_button"
            android:layout_marginBottom="6dp">
        </Button>

        <Button
            android:id="@+id/test_observation_button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="@string/test_observation"
            android:textColor="@color/menu_button_text_color"
            android:onClick="testObservation"
            android:background="@drawable/menu_button"
            android:layout_marginBottom="6dp">
        </Button>

        <Button
            android:id="@+id/instructions_button"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:text="@string/instructions"
            android:textColor="@color/menu_button_text_color"
            android:onClick="showInstructions"
            android:background="@drawable/menu_button">
        </Button>

    </LinearLayout>

    <TextView
        android:id="@+id/pmg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/petnica_meteor_group"
        android:textSize="12sp"
        android:textColor="@color/pmg_color"/>

</RelativeLayout>
